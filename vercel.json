{
  "version": 2,
  "builds": [
    {
      "src": "src/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/backend/simple.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/backend/simple.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|svg|ico|json|ttf|woff|woff2))",
      "dest": "src/frontend/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "src/frontend/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}